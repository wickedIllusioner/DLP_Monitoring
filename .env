# Сервер
SERVER_PORT=8080
ENVIRONMENT=development
LOG_LEVEL=debug

# База данных
DB_HOST=localhost
DB_PORT=5433
DB_NAME=dlp_system
DB_USER=dlp_admin
DB_PASSWORD=dlp_pass123
DB_SSL_MODE=disable

# CORS (для разработки - разрешаем всё)
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=300

# Таймауты сервера (в секундах)
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15
SERVER_IDLE_TIMEOUT=60
SERVER_REQUEST_TIMEOUT=60

# Настройки DLP
EVENT_RETENTION_DAYS=30
INCIDENT_AUTO_RESOLVE=false
SCAN_BATCH_SIZE=100

# TLS (отключено для разработки)
SERVER_TLS_ENABLED=false
SERVER_TLS_CERT_PATH=
SERVER_TLS_KEY_PATH=

# GORM
GORM_LOG_LEVEL=info